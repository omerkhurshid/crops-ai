# Database (Supabase or Neon)
DATABASE_URL="postgresql://username:password@localhost:5432/crops_ai?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/crops_ai?schema=public"
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Authentication (NextAuth.js)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Or for Clerk (alternative)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Weather APIs
OPENWEATHER_API_KEY="your-openweather-api-key"
METEOMATICS_USERNAME="your-meteomatics-username"
METEOMATICS_PASSWORD="your-meteomatics-password"

# Satellite Imagery - Copernicus Data Space Ecosystem
COPERNICUS_CLIENT_ID="your-copernicus-client-id"
COPERNICUS_CLIENT_SECRET="your-copernicus-client-secret"
# Legacy Sentinel Hub (deprecated)
SENTINEL_HUB_CLIENT_ID="your-sentinel-hub-client-id"
SENTINEL_HUB_CLIENT_SECRET="your-sentinel-hub-client-secret"
PLANET_API_KEY="your-planet-api-key"

# Redis Cache
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# File Storage
STORAGE_PROVIDER="cloudinary" # or "s3"
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Or for AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="crops-ai-storage"

# External APIs
CME_GROUP_API_KEY="your-cme-group-api-key"
JOHN_DEERE_API_KEY="your-john-deere-api-key"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# AI/ML Services
REPLICATE_API_TOKEN="your-replicate-api-token"
HUGGINGFACE_API_KEY="your-huggingface-api-key"
MODAL_TOKEN_ID="your-modal-token-id"
MODAL_TOKEN_SECRET="your-modal-token-secret"

# Development
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED="1"