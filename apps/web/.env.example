# Database
DATABASE_URL="postgresql://user:password@localhost:5432/cropsai"
DIRECT_URL="postgresql://user:password@localhost:5432/cropsai"

# NextAuth (Legacy - will be removed)
NEXTAUTH_URL="https://cropple.ai"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Supabase (New Primary Auth)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Feature Flags
NEXT_PUBLIC_USE_SUPABASE_AUTH="false"  # Start with false, gradually enable

# Email Service (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="noreply@cropple.ai"

# Supabase Email Settings (for auth emails)
SUPABASE_EMAIL_FROM="noreply@cropple.ai"
SUPABASE_SITE_URL="https://cropple.ai"

# App URL
NEXT_PUBLIC_APP_URL="https://cropple.ai"

# Weather API Keys
OPENWEATHER_API_KEY="your-openweather-api-key"
WEATHERAPI_KEY="your-weatherapi-key"

# Google Earth Engine (for satellite imagery and NDVI)
GEE_SERVICE_ACCOUNT_EMAIL="your-gee-service-account@project.iam.gserviceaccount.com"
GEE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
GEE_PROJECT_ID="your-gcp-project-id"

# Google Maps (Optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"