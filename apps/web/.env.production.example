# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database (Supabase)
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# NextAuth.js (Required)
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="your-32-character-random-secret-here"

# Redis Cache (Upstash) - Required for performance
UPSTASH_REDIS_REST_URL="https://[DATABASE_ID].upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# File Storage (Cloudinary) - Required for image uploads
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Weather API (OpenWeatherMap) - Required for weather features
OPENWEATHER_API_KEY="your-openweather-api-key"

# Google Earth Engine - Required for satellite features
GEE_SERVICE_ACCOUNT_EMAIL="your-gee-service-account@project.iam.gserviceaccount.com"
GEE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"
GEE_PROJECT_ID="your-gcp-project-id"

# OAuth Providers (Optional but recommended)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Analytics & Monitoring (Optional)
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Feature Flags (Optional)
ENABLE_BETA_FEATURES="true"
ENABLE_ML_PREDICTIONS="true"
ENABLE_SATELLITE_PROCESSING="true"

# Rate Limiting (Optional - for enhanced security)
UPSTASH_REDIS_RATE_LIMIT_URL="https://[DATABASE_ID].upstash.io"
UPSTASH_REDIS_RATE_LIMIT_TOKEN="your-rate-limit-token"

# Third-party Integrations (Optional)
REPLICATE_API_TOKEN="your-replicate-token"
MODAL_TOKEN_ID="your-modal-token-id"
MODAL_TOKEN_SECRET="your-modal-token-secret"

# Security (Optional - for enhanced security)
ENCRYPTION_KEY="your-32-byte-encryption-key"
JWT_SIGNING_KEY="your-jwt-signing-key"

# Environment
NODE_ENV="production"