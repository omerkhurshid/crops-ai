{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next .turbo node_modules",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:integration:watch": "jest --config=jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config=jest.integration.config.js --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "coverage:report": "node scripts/coverage-report.js",
    "coverage:open": "open coverage/lcov-report/index.html",
    "coverage:serve": "npx http-server coverage/lcov-report -p 8080",
    "security:lint": "eslint src/ --ext .ts,.tsx --config .eslintrc.json",
    "security:audit": "npm audit",
    "security:snyk": "snyk test",
    "security:scan": "node scripts/security-audit.js",
    "security:all": "npm run security:lint && npm run security:audit && npm run security:snyk",
    "perf:test": "node scripts/performance-test-simple.js",
    "perf:load": "npx artillery run performance/artillery-config.yml",
    "perf:bundle": "npm run build && npx bundlesize",
    "analyze": "ANALYZE=true npm run build",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "perf:lighthouse": "npx lighthouse http://localhost:3000 --output json --output html --output-path performance-reports/lighthouse",
    "perf:all": "npm run perf:test",
    "test:apis": "node scripts/test-apis.js",
    "setup:check": "node scripts/test-apis.js"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/next": "^4.0.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@react-google-maps/api": "^2.20.7",
    "@sentry/nextjs": "^10.19.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.78.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-security": "^3.0.1",
    "framer-motion": "^12.23.12",
    "google-auth-library": "^10.5.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "graphql-type-json": "^0.3.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.536.0",
    "next": "^14.2.31",
    "postcss": "^8",
    "prisma": "^5.19.1",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.1.2",
    "resend": "^6.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@jest/environment": "^30.0.5",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "jest": "^25.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-mock-extended": "^3.0.7",
    "jsdom": "^26.1.0",
    "node-mocks-http": "^1.17.2",
    "snyk": "^1.1298.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
